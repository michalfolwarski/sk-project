<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" minHeight="690.0" minWidth="530.0"
            xmlns="http://javafx.com/javafx/8.0.121" fx:controller="pk.sk.controller.MainController">
    <GridPane AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="230.0" minWidth="100.0" prefWidth="170.0"/>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="50.0" minWidth="40.0" prefWidth="40.0"/>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="20.0"  minWidth="10.0" prefWidth="10.0"/>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="230.0" minWidth="100.0" prefWidth="170.0"/>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="50.0" minWidth="40.0" prefWidth="40.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="20.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="20.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="20.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="10.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="20.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="10.0" vgrow="SOMETIMES"/>
            <RowConstraints maxHeight="500" minHeight="500.0" prefHeight="500.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="20.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <Label text="Initial population [%]"/>
        <Label text="Defectors of initial population [%]" GridPane.rowIndex="1"/>
        <Label text="Delay [ms]" GridPane.rowIndex="2"/>
        <Label text="Max number of groups" GridPane.columnIndex="3"/>
        <Label text="Max population per group" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
        <Label text="Probability of split the group [â€°]" GridPane.columnIndex="3" GridPane.rowIndex="2"/>
        <TextField fx:id="initialPopulationField" text="30" GridPane.columnIndex="1"/>
        <TextField fx:id="defectorsField" text="10" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <TextField fx:id="delayField" text="100" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <TextField fx:id="maxNumberOfGroupsField" text="10" GridPane.columnIndex="4"/>
        <TextField fx:id="maxPopulationPerGroup" text="30" GridPane.columnIndex="4" GridPane.rowIndex="1"/>
        <TextField fx:id="probabilityOfSplittingGroupField" text="100" GridPane.columnIndex="4" GridPane.rowIndex="2"/>

        <Button fx:id="runButton" mnemonicParsing="false" onAction="#run" text="Run"
                GridPane.columnIndex="3" GridPane.columnSpan="2" GridPane.rowIndex="4"
                GridPane.halignment="RIGHT"/>

        <ImageView fx:id="outputContainer"
                   preserveRatio="true" GridPane.halignment="CENTER"
                   GridPane.columnSpan="5" GridPane.rowIndex="6"/>
    </GridPane>
</AnchorPane>
